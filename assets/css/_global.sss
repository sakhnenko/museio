  35% 
    clip: rect(76px, 9999px, 5px, 0)
  
  40% 
    clip: rect(51px, 9999px, 28px, 0)
  
  45% 
    clip: rect(58px, 9999px, 81px, 0)
  
  50% 
    clip: rect(65px, 9999px, 78px, 0)
  
  55% 
    clip: rect(94px, 9999px, 79px, 0)
  
  60% 
    clip: rect(75px, 9999px, 67px, 0)
  
  65% 
    clip: rect(3px, 9999px, 39px, 0)
  
  70% 
    clip: rect(75px, 9999px, 87px, 0)
  
  75% 
    clip: rect(85px, 9999px, 22px, 0)
  
  80% 
    clip: rect(48px, 9999px, 72px, 0)
  
  85% 
    clip: rect(40px, 9999px, 5px, 0)
  
  90% 
    clip: rect(9px, 9999px, 82px, 0)
  
  95% 
