  20% 
    clip: rect(84px, 9999px, 10px, 0)
  
  25% 
    clip: rect(43px, 9999px, 88px, 0)
  
  30% 
    clip: rect(5px, 9999px, 86px, 0)
  
  35% 
    clip: rect(57px, 9999px, 86px, 0)
  
  40% 
    clip: rect(27px, 9999px, 33px, 0)
  
  45% 
    clip: rect(25px, 9999px, 36px, 0)
  
  50% 
    clip: rect(44px, 9999px, 64px, 0)
  
  55% 
    clip: rect(26px, 9999px, 93px, 0)
  
  60% 
    clip: rect(85px, 9999px, 51px, 0)
  
  65% 
    clip: rect(40px, 9999px, 19px, 0)
  
  70% 
    clip: rect(95px, 9999px, 61px, 0)
  
  75% 
    clip: rect(32px, 9999px, 19px, 0)
  
  80% 
    clip: rect(78px, 9999px, 69px, 0)
  
  85% 
    clip: rect(44px, 9999px, 20px, 0)
  
  90% 
    clip: rect(15px, 9999px, 56px, 0)
  
  95% 
    clip: rect(30px, 9999px, 39px, 0)
  
  100% 
    clip: rect(81px, 9999px, 9px, 0)
  

@keyframes noise-anim-2 
  0% 
    clip: rect(59px, 9999px, 69px, 0)
  
  5% 
    clip: rect(36px, 9999px, 91px, 0)
  
  10% 
    clip: rect(86px, 9999px, 67px, 0)
  
  15% 
    clip: rect(29px, 9999px, 60px, 0)
  
  20% 
    clip: rect(83px, 9999px, 56px, 0)
  
  25% 
    clip: rect(39px, 9999px, 8px, 0)
  
  30% 
